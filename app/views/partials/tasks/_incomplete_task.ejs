<li class="task" id="task_<%= task._id %>">
  <input action="/tasks/complete/<%= task._id %>" data-method="put" data-remote="true" id="task_<%= task._id %>_checkbox" name="task_<%= task._id %>_checkbox" type="checkbox" />
  <span><%= task.title %></span>
  <a href="#" class="edit_task_link" data-remote="true">edit</a>
  <a href="/tasks/<%= task._id %>" data-confirm="Are you sure you want to delete this task?" data-method="delete" data-remote="true" rel="nofollow">delete</a>
  <form accept-charset="UTF-8" action="/tasks/<%= task._id %>" class="simple_form task edit" data-remote="true" id="edit_task_<%= task._id %>" method="put" style="display:none;">
    <p class="input string required">
      <input autocomplete="off" class="string required task_name" id="task_name" maxlength="255" name="title" size="50" type="text" value="<%= task.title %>" />
    </p>
    <p>
      <span class="input string optional">
        <label class="string optional" for="task_tag_list"> Tags</label>
        <input class="string optional tag_list" id="task_tag_list" name="tags" size="50" type="text" value="<%= task.tags.join(', ') %>" />
      </span>
      <input class="awesome" id="task_submit" name="commit" type="submit" value="Update Task" />
      <a href="#" class="cancel_edit_link" data-remote="true">cancel</a>
    </p>
  </form>
</li>